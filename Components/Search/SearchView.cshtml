    <!--------------------------------------Result Table -------------------------------------------------->
    <h3>نتيجة البحث:</h3>

    <div class="row">
        <div class="col-md-6">
            <div id="filter-panel" class="filter-panel">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div id="column_chart2" style="width: 500px;"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div id="filter-panel" class="filter-panel">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div id="column_chart1" style="width: 500px;"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <div id="filter-panel" class="filter-panel">
                <div class="panel panel-default">
                    <div class="panel-body" style="margin-bottom: -20px">
                        <table id="summary" class="table table-bordred" style="margin-bottom: -20px">
                            <th>
                                <br />
                                <p>عدد المحاضر : {{cases_count}} </p>
                            </th>
                            <th>
                                <br />
                                <p>عدد الارقام المفصولة : {{disconnected_numbers}}</p>
                            </th>
                            <th>
                                <br />
                                <p>مجموع المبالغ المفقودة : {{acutal_loss}} </p>
                            </th>
                            <th>
                                <br />
                                <p>مجموع المبالغ المقدرة : {{estimated_loss}}</p>
                            </th>
                        </table>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div id="filter-panel" class="filter-panel">
            <div class="panel panel-default">
                <div class="panel-body">
                    <button ng-click="exportCasetable()">Export</button>
                    <div class="table-responsive">
                        <table id="mytable01" class="table table-bordred table-striped">
                            <thead>
                                <th><a ng-click="orderByType='case_id'; sortReverse=!sortReverse">رقم المحضر</a>
                                    <span ng-show="orderByType == 'case_id' && sortReverse" class="fa fa-caret-down"></span>
                                    <span ng-show="orderByType == 'case_id' && !sortReverse" class="fa fa-caret-up"></span>
                                </th>
                                <th><a ng-click="orderByType='case_customer_name'; sortReverse=!sortReverse">اسم المشترك</a>
                                    <span ng-show="orderByType == 'case_customer_name' && sortReverse" class="fa fa-caret-down"></span>
                                    <span ng-show="orderByType == 'case_customer_name' && !sortReverse" class="fa fa-caret-up"></span>
                                </th>
                                <th><a ng-click="orderByType='case_city'; sortReverse=!sortReverse">المدينة</a>
                                    <span ng-show="orderByType == 'case_city' && sortReverse" class="fa fa-caret-down"></span>
                                    <span ng-show="orderByType == 'case_city' && !sortReverse" class="fa fa-caret-up"></span>
                                </th>
                                <th><a ng-click="orderByType='fraudStatus_name'; sortReverse=!sortReverse">حالة الإختلاس</a>
                                    <span ng-show="orderByType == 'fraudStatus_name' && sortReverse" class="fa fa-caret-down"></span>
                                    <span ng-show="orderByType == 'fraudStatus_name' && !sortReverse" class="fa fa-caret-up"></span>
                                </th>
                                <th><a ng-click="orderByType='nationality_name'; sortReverse=!sortReverse">الجنسية</a>
                                    <span ng-show="orderByType == 'nationality_name' && sortReverse" class="fa fa-caret-down"></span>
                                    <span ng-show="orderByType == 'nationality_name' && !sortReverse" class="fa fa-caret-up"></span>
                                </th>
                                <th><a ng-click="orderByType='case_date'; sortReverse=!sortReverse">تاريخ الحالة</a>
                                    <span ng-show="orderByType == 'case_date' && sortReverse" class="fa fa-caret-down"></span>
                                    <span ng-show="orderByType == 'case_date' && !sortReverse" class="fa fa-caret-up"></span>
                                </th>
                                <th><a ng-click="orderByType='caseStatus_name'; sortReverse=!sortReverse">حالة القضية</a>
                                    <span ng-show="orderByType == 'caseStatus_name' && sortReverse" class="fa fa-caret-down"></span>
                                    <span ng-show="orderByType == 'caseStatus_name' && !sortReverse" class="fa fa-caret-up"></span>
                                </th>
                                <th>عرض</th>
                                <th>تعديل</th>
                            </thead>
                            <tbody>
                                <tr ng-repeat="c in TableRecords | orderBy:orderByType:sortReverse">
                                    <td>{{c.case_id}}</td>
                                    <td>{{c.case_customer_name}}</td>
                                    <td>{{c.case_city}}</td>
                                    <td>{{c.fraudStatus_name}}</td>
                                    <td>{{c.nationality_name}}</td>
                                    <td>{{c.case_date}}</td>
                                    <td>{{c.caseStatus_name}}</td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="View">
                                            <button class="btn btn-primary btn-xs" data-title="View" data-toggle="modal" data-target="#view" ng-click="OpenCase(c.case_id);">
                                                <span class="glyphicon glyphicon-list-alt"></span>
                                            </button>
                                        </p>
                                    </td>
                                    <td>
                                        <p data-placement="top">
                                            <button class="btn btn-primary btn-xs" ng-click="EditCase(c.case_id);">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </button>
                                        </p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div align="center">
                            <pagination total-items="ui.tableTotalCount" ng-model="ui.tableCurrentPage" rotate="false" boundary-links="true" max-size="10" items-per-page="ui.tablePageSize" ng-change="Paginate()"></pagination>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            @Html.Partial("~/Components/Search/ViewModal.cshtml");
        </div>
    </div>
    <!--------------------------------------end of Result Table -------------------------------------------------->
</div>


